services:
  # =========================
  # Certificate Authorities
  # =========================
  ca_org1:
    container_name: ca.org1.ownify.com
    hostname: ca.org1.ownify.com
    image: hyperledger/fabric-ca:1.5
    environment:
      - FABRIC_CA_HOME=/etc/hyperledger/fabric-ca-server
      - FABRIC_CA_SERVER_CA_NAME=ca.org1.ownify.com
      - FABRIC_CA_SERVER_TLS_ENABLED=true
      - FABRIC_CA_SERVER_PORT=7054
    ports:
      - "7054:7054"
    command: sh -c 'sleep 5 && fabric-ca-server start -b admin:adminpw -d'
    volumes:
      - ./create-certificate-with-ca/fabric-ca/org1:/etc/hyperledger/fabric-ca-server
    networks:
      test:
        aliases:
          - ca_org1

  ca_orderer:
    container_name: ca_orderer
    hostname: ca_orderer
    image: hyperledger/fabric-ca:1.5
    environment:
      - FABRIC_CA_HOME=/etc/hyperledger/fabric-ca-server
      - FABRIC_CA_SERVER_CA_NAME=ca-orderer
      - FABRIC_CA_SERVER_TLS_ENABLED=true
      - FABRIC_CA_SERVER_PORT=9054
    ports:
      - "9054:9054"
    command: sh -c 'sleep 5 && fabric-ca-server start -b admin:adminpw -d --csr.hosts ca_orderer --csr.hosts localhost'
    volumes:
      - ./create-certificate-with-ca/fabric-ca/ordererOrg:/etc/hyperledger/fabric-ca-server
    networks:
      test:
        aliases:
          - ca_orderer

  # =========================
  # CouchDBs
  # =========================
  couchdb0:
    container_name: couchdb0
    image: couchdb:3
    environment:
      - COUCHDB_USER=admin
      - COUCHDB_PASSWORD=password
    ports:
      - "5984:5984"
    networks:
      - test

  couchdb1:
    container_name: couchdb1
    image: couchdb:3
    environment:
      - COUCHDB_USER=admin
      - COUCHDB_PASSWORD=password
    ports:
      - "5985:5984"
    networks:
      - test

  couchdb2:
    container_name: couchdb2
    image: couchdb:3.1.1
    environment:
      - COUCHDB_USER=admin
      - COUCHDB_PASSWORD=password
    ports:
      - "5986:5984"
    networks:
      - test

  # =========================
  # Orderers
  # =========================
  orderer.ownify.com:
    container_name: orderer.ownify.com
    hostname: orderer.ownify.com
    image: hyperledger/fabric-orderer:2.5
    dns_search: .
    environment:
      - FABRIC_LOGGING_SPEC=INFO
      - ORDERER_GENERAL_LISTENADDRESS=0.0.0.0
      - ORDERER_GENERAL_LISTENPORT=7050
      - ORDERER_GENERAL_LOCALMSPID=OrdererMSP
      - ORDERER_GENERAL_LOCALMSPDIR=/var/hyperledger/orderer/msp
      - ORDERER_GENERAL_BOOTSTRAPMETHOD=file
      - ORDERER_GENERAL_BOOTSTRAPFILE=/var/hyperledger/orderer/genesis.block
      - ORDERER_GENERAL_TLS_ENABLED=true
      - ORDERER_GENERAL_TLS_PRIVATEKEY=/var/hyperledger/orderer/tls/server.key
      - ORDERER_GENERAL_TLS_CERTIFICATE=/var/hyperledger/orderer/tls/server.crt
      - ORDERER_GENERAL_TLS_ROOTCAS=/var/hyperledger/orderer/tls/tlscacerts/tls-ca_orderer-9054-ca-orderer.pem
      - ORDERER_GENERAL_CLUSTER_CLIENTCERTIFICATE=/var/hyperledger/orderer/tls/server.crt
      - ORDERER_GENERAL_CLUSTER_CLIENTPRIVATEKEY=/var/hyperledger/orderer/tls/server.key
      - ORDERER_GENERAL_CLUSTER_ROOTCAS=/var/hyperledger/orderer/tls/tlscacerts/tls-ca_orderer-9054-ca-orderer.pem
      - ORDERER_OPERATIONS_LISTENADDRESS=0.0.0.0:8443
    volumes:
      - ./channel/channel-artifacts/genesis.block:/var/hyperledger/orderer/genesis.block
      - ./channel/crypto-config/ordererOrganizations/ownify.com/orderers/orderer.ownify.com/msp:/var/hyperledger/orderer/msp
      - ./channel/crypto-config/ordererOrganizations/ownify.com/orderers/orderer.ownify.com/tls:/var/hyperledger/orderer/tls
      - orderer.ownify.com-data:/var/hyperledger/production/orderer
    ports:
      - "7050:7050"
      - "8443:8443"
    networks:
      test:
        aliases:
          - orderer

  orderer2.ownify.com:
    container_name: orderer2.ownify.com
    hostname: orderer2.ownify.com
    image: hyperledger/fabric-orderer:2.5
